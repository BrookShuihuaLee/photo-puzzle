doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=0, maximum-scale=1, minimum-scale=1')
    title= htmlWebpackPlugin.options.title
  body
    #loadingPage
      .container
        .cube1
        .cube2
        .cube3
      style.
        #loadingPage {
          position: absolute;
          left: 0;
          top: 0;
          width: 100%;
          background: white;
          z-index: 9
        }

        #loadingPage .container {
          margin: 100px auto;
          width: 70px;
          height: 70px;
          position: relative;
        }
        
        .cube1, .cube2, .cube3 {
          width: 30px;
          height: 30px;
          position: absolute;
          top: 0;
          left: 0;
          
          animation: cubemove 2s infinite ease-in-out;
        }

        #loadingPage .cube1 {
          background-color: #7986CB;
        }

        #loadingPage .cube2 {
          width: 0;
          height: 0;
          border-left: 15px solid transparent;
          border-right: 15px solid transparent;
          border-bottom: 30px solid #4FC3F7;

          animation-delay: -0.5s;
        }
        
        #loadingPage .cube3 {
          background-color: #4DD0E1;
          border-radius: 30px;

          animation-delay: -1s;
        }
        
        @keyframes cubemove {
          25% {
            transform: translateX(40px);
          } 50% {
            transform: translateX(40px) translateY(40px);
          } 75% {
            transform: translateY(40px);;
          }
        }
    #mount
    - if (htmlWebpackPlugin.options.isDev) {
      //- <script src="https://jsconsole.com/js/remote.js?pp"></script>
      //- <script>console.error = console.warn = console.log</script>
    - } else {
      each js in htmlWebpackPlugin.files.js
        script(src=`${htmlWebpackPlugin.options.ORIGIN}/js/${js}`)
    - }